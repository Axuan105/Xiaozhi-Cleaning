page {
  padding: 0;
}
.header {
  margin-top: 20rpx;
  padding: 0 30rpx 10rpx 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.header .header-img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}
.header .header-title {
  margin-left: 20rpx;
}
.composite {
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 1px solid #f2f2f2;
}
.composite .right {
  margin-left: 20rpx;
}
.textarea {
  width: 100%;
  height: 100rpx;
  padding: 30rpx;
}
.textarea textarea {
  width: 94%;
  height: 100%;
}
.upImg {
  display: flex;
  flex-wrap: wrap;
}
.upImg .list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 30rpx;
}
.upImg .list .item {
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.upImg .list .item image {
  width: 150rpx;
  height: 150rpx;
}
.upImg .upImg-img {
  width: 150rpx;
  height: 150rpx;
  background-color: #f5f5f5;
  border: 1rpx dashed #ccc;
  margin-right: 20rpx;
}
.upImg .upImg-img image {
  width: 100rpx;
  height: 100rpx;
  margin: 27rpx 27rpx;
}
.button {
  padding: 30rpx;
  margin-top: 250rpx;
}