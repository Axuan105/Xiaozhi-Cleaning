page {
  background-color: #f5f5f5;
  padding: 0;
}
page .order-state .state {
  background-color: #fff;
  margin-top: 20rpx;
  height: 200rpx;
  overflow: hidden;
}
page .order-state .state .state-title {
  padding-top: 10rpx;
  border-bottom: 1rpx solid #f5f5ff;
}
page .order-state .state .state-title view {
  border: 1rpx solid #7f7f7f;
  padding: 10rpx 20rpx;
}
page .order-state .steps {
  margin-left: 40rpx;
  display: flex;
}
page .order-state .steps .left .steps-b {
  margin-top: -7rpx;
  position: absolute;
  left: 52rpx;
  height: 80rpx;
  border-left: 2px solid #ebedf0;
  box-sizing: border-box;
}
page .order-state .steps .right {
  margin-left: 10rpx;
  margin-top: 15rpx;
  color: #07c160;
}
page .order-state .order-info {
  margin-top: 20rpx;
  background-color: #fff;
  height: 400rpx;
}
page .order-state .order-info .title {
  height: 60rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-bottom: 1rpx solid #f5f5ff;
}
page .order-state .order-info .service .service-item {
  height: 60rpx;
}
page .order-state .order-info .service .service-item .left {
  color: #848c99;
}
page .order-state .order-info .service .service-item .right {
  margin-left: 50rpx;
}
page .order-state .order-info .service .service-item .right-a {
  font-size: 28rpx;
