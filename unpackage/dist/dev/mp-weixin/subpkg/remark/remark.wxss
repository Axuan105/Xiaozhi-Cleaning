page {
  padding: 0;
  background-color: #f5f5f5;
}
.remark-a {
  padding: 20rpx;
  background-color: #fff;
}
.remark-a .remark-title .right {
  font-size: 24rpx;
  color: #888b99;
}
.remark-a .category {
  margin-top: 30rpx;
}
.remark-a .category .category-item {
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  background-color: #f2f2f2;
  border-radius: 30rpx;
  margin-right: 20rpx;
  outline: none;
  line-height: 30rpx;
  border: 1rpx solid #fff;
}
.remark-a .category .active {
  border: 1px solid #f33e3e;
  color: #f33e3e;
  background: rgba(243, 63, 62, 0.1);
}
.remark-list {
  margin-top: 30rpx;
}
.remark-list .remark-item {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx 20rpx;
}
.comment-img {
  display: flex;
}
.comment-img .img image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.comment-img .info {
  margin-left: 30rpx;
}
.comment-img .info .user {
  display: flex;
}
.comment-img .info .name {
  margin-right: 10rpx;
  font-size: 28rpx;
}
.comment-img .info .star {
  margin-top: 8rpx;
}
.comment-img .info .evaluate {
  display: flex;
  margin-top: 10rpx;
  color: #888b99;
  font-size: 24rpx;
}
.tagList .tagList-list {
  margin-right: 10rpx;
  margin-top: 10rpx;
  border: 1px solid #b9bec3;
  padding: 5rpx 12rpx;
  line-height: 30rpx;
  color: #888b99;
  font-size: 24rpx;
}
.comment-desc .desc-top {
  font-size: 28rpx;
  padding: 30rpx 0 30rpx 0;
}
.comment-desc .desc-button image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}