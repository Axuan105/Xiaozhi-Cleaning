.login .login-a {
  padding: 0 40rpx 60rpx 40rpx;
}
.login .login-a .phone {
  width: 88%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-top: 40rpx;
  border: 1px solid #e3e3e3;
  border-radius: 60rpx;
}
.login .login-a .phone image {
  width: 30rpx;
  height: 30rpx;
}
.login .login-a .phone input {
  margin-left: 20rpx;
}
.login .login-a .button {
  width: 95%;
  margin-top: 50rpx;
}
.login .login-a .button .switch {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: red;
  margin-left: 540rpx;
