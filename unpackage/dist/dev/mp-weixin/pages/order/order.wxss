page {
  background-color: #f5f5f5;
  padding: 0;
}
.margins {
  padding: 0 20rpx;
}
.tabs {
  border-top: 1px solid #e2e4e8;
}
.tabs .order-list {
  margin-top: 20rpx;
}
.tabs .order-list .order-item {
  background-color: #fff;
  margin-top: 20rpx;
}
.tabs .order-list .order-item .order-button {
  display: flex;
  text-align: right;
  padding: 10rpx 0;
  margin-left: 490rpx;
}
.tabs .order-list .order-item .order-button .active {
  color: #fff;
  background-color: #e6454a;
  border: 1rpx solid #e6454a;
  border-radius: 4rpx;
  padding: 0 10rpx;
}
.tabs .order-list .order-item .order-button .button-a {
  display: flex;
}
.tabs .order-list .order-item .order-button .button-a .left {
  margin-left: 10rpx;
  font-size: 24rpx;
  padding: 10rpx;
}
.tabs .order-list .order-item .order-button .button-a .left-a {
  margin-left: 10rpx;
  font-size: 24rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
}
.tabs .order-list .order-item .order-button .button-b {
  margin-left: 118rpx;
  font-size: 24rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
}
.tabs .order-list .order-item .order-button .button-c {
  margin-left: 130rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}
.tabs .order-list .order-item .order-tab {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 20rpx;
}
.tabs .order-list .order-item .order-tab .tab-img {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.tabs .order-list .order-item .order-tab .tab-img image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.tabs .order-list .order-item .order-tab .tab-img view {
  margin-left: 20rpx;
  color: #52585a;
}
.tabs .order-list .order-item .order-tab .tab-img .cancel {
  font-size: 28rpx;
  color: #292d6e;
}
.tabs .order-list .order-item .time {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #52585a;
}
.tabs .order-list .order-item .time view {
  margin-right: 15rpx;
}
.empty {
  height: 100%;
  text-align: center;
}
.empty image {
  margin-top: 220rpx;
  width: 300rpx;
  height: 300rpx;
}
.empty .empty-a {
  margin-top: 30rpx;
}
.empty .empty-b {
  margin: 30rpx auto;
  width: 400rpx;
  border-radius: 6rpx;
  padding: 25rpx 0;
  color: #e6454a;
  border: 1rpx solid #e6454a;
}