.home {
  width: 95%;
}
.home .location {
  width: 95%;
  height: 70rpx;
  margin: 30rpx 0;
  font-size: 28rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
}
.home .location .img {
  display: flex;
  margin-left: 10rpx;
}
.home .location .img image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
}
.home .location .location-wz {
  color: #bdbdbd;
}
.home .location .location-wz .input {
  width: 550rpx;
  height: 70rpx;
